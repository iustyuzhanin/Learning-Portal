@model IEnumerable<LearningPortal.Models.AppUserModel>

@{
    ViewData["Title"] = "Пользователи";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Логин
            </th>
            <th>
                ФИО
            </th>
            <th>
                Роль
            </th>
            <th>
                Почта
            </th>
            <th>
                <a asp-action="Create" class="btn btn-outline-primary"><i class="far fa-plus-square"></i> Создать пользователя</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td>Нет пользователей</td></tr>
        }
        else
        {
            foreach (AppUserModel user in Model)
            {
                <tr>
                    <th>
                        <a class="text-primary" asp-action="Profile" asp-route-name="@user.UserName">@user.UserName</a>
                    </th>
                    <td>
                        @user.FullName
                    </td>
                    <td>
                        @user.Role
                    </td>
                    <td>
                        @user.Email
                    </td>
                    <td>
                        <a class="text-success" asp-action="Edit" asp-route-id="@user.Id"><i class="fa fa-marker fa-lg"></i></a>
                        <a class="text-danger" asp-action="Delete" asp-route-id="@user.Id"><i class="fa fa-trash-alt fa-lg"></i></a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>

<div>
    <a asp-controller="Admin" asp-action="Index">Назад</a>
</div>