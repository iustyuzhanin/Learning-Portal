@model IEnumerable<LearningPortal.Domains.Course>

@{
    ViewData["Title"] = "Курсы";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Program)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                <a asp-action="Create" class="btn btn-outline-success"><i class="fas fa-plus"></i> Создать курс</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td>Нет курсов</td></tr>
        }
        else
        {
            @foreach (var course in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => course.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.Program)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.ImageName)
                    </td>
                    <td>
                        <a class="text-primary" asp-action="Edit" asp-route-id="@course.Id"><i class="fa fa-marker fa-lg"></i></a>
                        <a class="text-danger" asp-action="Delete" asp-route-id="@course.Id"><i class="fa fa-trash-alt fa-lg"></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>